<launch>

    <!-- telep modality -->
    <arg name="teleop_config" default="$(find pad_control)/config/full_task_space.yaml" />

    <!-- joy node -->
    <node respawn="true" pkg="joy" type="joy_node" name="joy_node">
        <param name="dev" type="string" value="/dev/input/js0" />
        <param name="autorepeat_rate" value="1000" />
    </node>

    <!-- teleop node -->
    <rosparam file="$(arg teleop_config)" command="load" />
    <node pkg="joy_teleop" type="joy_teleop.py" name="joy_teleop"/>

    <!--

      # 0, 1 analogico sx
      # 2 L2
      # 3, 4 analogico dx
      # 5 R2

      # 0 .. 13
      # croce, cerchio, triangolo, quadrato, L1, L2, .. , .. , share, options, tasto play, analog sx, analog dx

    -->

</launch>
