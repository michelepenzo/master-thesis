<launch>

    <!-- telep modality, controller enabled, toolName -->
    <arg name="teleop_config" default="$(find pad_control)/config/full_task_space.yaml" />
    <param name="/iiwa/toolName" type="string" value="MPLM3204P" />

    <!-- csv name param -->
    <param name="/sub_folder" type="string" value="teleop" />

    <!-- joy node -->
    <node respawn="true" pkg="joy" type="joy_node" name="joy_node">
        <param name="dev" type="string" value="/dev/input/js0" />
        <param name="autorepeat_rate" value="500" />
        <!--<param name="coalesce_interval" value="0.001" />-->
        <param name="dev_ff" value="/dev/input/event24" />
    </node>

    <!-- teleop node -->
    <rosparam file="$(arg teleop_config)" command="load" />
    <node pkg="joy_teleop" type="joy_teleop.py" name="joy_teleop"/>

    <!-- controller node -->
    <node pkg="pad_control" type="controller.py" name="controller"/>

    <!-- calculate wrench node -->
    <node pkg="utils_functions" type="cartesian_wrench.py" name="cartesian_wrench"/>

</launch>
